<div id="comments">
	<% @comments.each do |comment| %>
		<div class="photo_comments">
			<div class = "row">
				<div class= "span2'">
				     <div class="avatar">
				     </div>
				</div>
				      
				<div class= "span7">
				        <p><%= comment.content %></p>
				        <div class="meta">
				          <%= time_ago_in_words(comment.created_at) + " ago" %>   
					    </div>
				</div>
			</div>
		</div>
	<% end %>
</div>