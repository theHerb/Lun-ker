<div class = "page-header">
   <h1>All of the Statuses</h1>
  </div>
<%= link_to "Post a New Status", new_path, class: "btn btn-success" %>
<% @statuses.each do |status| %>
<div class="status">
  <div class = "row">
    <div class= "span1'">
      <%= link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
    </div>
      <div class= "span7">
        <strong><%= status.user.full_name %></strong>
        <p><%= status.content %></p>
        <div class="meta">
          <%= time_ago_in_words(status.created_at) + " ago" %>
          <% if current_user == status.user || current_user.try(:admin?) %>
          <span class= "admin">
            | <%= link_to 'Edit', edit_status_path(status) %> |
            <%= link_to 'Delete', status, confirm: 'Are you sure?', method: :delete %>
          </span>
          <% end %>
        </div>
     </div>
  </div>
</div>
<% end %>


