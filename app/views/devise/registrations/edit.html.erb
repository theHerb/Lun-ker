<div class="row">
  <div class="span5">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }, html: {class: "well"}) do |f| %>
    <%= devise_error_messages! %>
      <fieldset>
        <legend>Edit <%= resource_name.to_s.humanize %></legend>

        <div><%= f.input :first_name %></div>
        <div><%= f.input :last_name %></div>
        <div><%= f.input :profile_name %></div>
        <div><%= f.input :email %></div>
        <div><%= f.input :password, :label => "New Password", :hint => "*Leave blank if you don't want to change it" %></div>
        <div><%= f.input :password_confirmation, :label => "Confirm New Password" %></div>
        <div><%= f.input :current_password, :label => "Current Password", :hint => "*We need your current password to complete the changes" %></div>

        <div><%= f.button :submit, "Update" %></div>
        

      </fieldset>
    <% end %>
  </div>

  <div class="span7">
    <h2>Edit your information here.</h2>
  </div>

</div>
